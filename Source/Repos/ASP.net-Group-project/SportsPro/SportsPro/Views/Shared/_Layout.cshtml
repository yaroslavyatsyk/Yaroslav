@{
    string controller =
        ViewContext.RouteData.Values["controller"].ToString();
    string action =
        ViewContext.RouteData.Values["action"].ToString();
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportsPro.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SportsPro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link
                        @(controller == "Home" && action == "Index" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link
                        @(controller == "Home" && action == "Product" ? "active" : "")"
                               asp-controller="Home" asp-action="Product">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link
                        @(controller == "Home" && action == "Technician" ? "active" : "")"
                               asp-controller="Home" asp-action="Technician">Technicians</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link
                        @(controller == "Home" && action == "Customer" ? "active" : "")"
                               asp-controller="Home" asp-action="Customer">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link
                        @(controller == "Home" && action == "Incident" ? "active" : "")"
                               asp-controller="Home" asp-action="Incident">Incidents</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link
                        @(controller == "Home" && action == "Registration" ? "active" : "")"
                               asp-controller="Home" asp-action="Registration">Registration</a>
                        </li>
                    
                    </ul>
                    <div class="navbar-nav navbar-right">
                       <a class="nav-link
                        @(controller == "Home" && action == "About" ? "active" : "")"
                               asp-controller="Home" asp-action="About">About</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SportsPro - <a asp-controller="Home" asp-action="About" style="text-decoration: none">About Us</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

